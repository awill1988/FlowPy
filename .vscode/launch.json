{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flow-Py (help)",
            "type": "python",
            "request": "launch",
            "module": "flowpy",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": ["help"],
            "env": {},
            "justMyCode": false
        },
        {
            "name": "Test flow.args",
            "args": ["src/tests/flow/args_test.py"],

            "type": "python",
            "request": "launch",
            "purpose": ["debug-test"],
